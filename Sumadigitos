import kotlin.math.pow

fun esIgualASumaDigitos(n: Int): Boolean {
    val digitos = n.toString().map { it.toString().toInt() }  // Convertimos el número en lista de dígitos
    val cantidad = digitos.size
    var suma = 0

    for (d in digitos) {
        suma += d.toDouble().pow(cantidad).toInt()  // Sumamos cada dígito elevado al número de dígitos
    }

    return n == suma
}

fun main() {
    val numero = 153
    println("¿$numero es igual a la suma de sus dígitos elevados a la cantidad de dígitos? ${esIgualASumaDigitos(numero)}")
}
